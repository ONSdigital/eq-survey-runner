{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "when": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string"
            },
            "meta": {
                "type": "string"
            },
            "condition": {
                "enum": [
                    "equals",
                    "not equals",
                    "contains"
                ]
            },
            "value": {
                "type": "string"
            }
        },
        "required": [
            "condition",
            "value"
        ],
        "oneOf": [
            {
                "required": [
                    "id"
                ]
            },
            {
                "required": [
                    "meta"
                ]
            }
        ]
    }
  },
  "properties": {
    "mime_type": {
      "type": "string"
    },
    "schema_version": {
      "type": "string"
    },
    "data_version": {
      "enum": ["0.0.1", "0.0.2"]
    },
    "questionnaire_id": {
      "type": "string"
    },
    "survey_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "theme": {
      "type":"string"
    },
    "navigation":{
      "type": "boolean"
    },
    "introduction": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        }
      }
    },
    "groups": {
      "type": "array",
      "completed_id": {
          "type":"string"
      },
      "highlight_when": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
      },
      "hide_in_navigation": {
          "type":"boolean"
      },
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "blocks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "sections": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "number": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "questions": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "string"
                            },
                            "title": {
                              "type": "string"
                            },
                            "number": {
                              "type": "string"
                            },
                            "description": {
                              "type": "string"
                            },
                            "guidance": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "title": {
                                    "type": "string"
                                  },
                                  "description": {
                                    "type": "string"
                                  },
                                  "list": {
                                    "type": "array",
                                    "items": {
                                      "type": "string"
                                    }
                                  }
                                }
                              }
                            },
                            "skip_condition": {
                              "type": "object",
                              "properties": {
                                "when": {
                                  "$ref": "#/definitions/when"
                                }
                              }
                            },
                            "type": {
                              "enum": ["General", "DateRange", "RepeatingAnswer", "Relationship"]
                            },
                            "answers": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "id": {
                                    "type": "string"
                                  },
                                  "q_code": {
                                    "type": "string"
                                  },
                                  "label": {
                                    "type": "string"
                                  },
                                  "guidance": {
                                    "type": "string"
                                  },
                                  "type": {
                                    "enum": [
                                        "Checkbox",
                                        "Currency",
                                        "Date",
                                        "MonthYearDate",
                                        "Integer",
                                        "Percentage",
                                        "PositiveInteger",
                                        "Radio",
                                        "TextArea",
                                        "TextField",
                                        "Relationship"
                                    ]
                                  },
                                  "options": {
                                    "type": "array",
                                    "items": {}
                                  },
                                  "mandatory": {
                                    "type": "boolean"
                                  },
                                  "alias": {
                                    "type": "string"
                                  },
                                  "display": {
                                    "type": "object",
                                    "properties": {
                                      "properties": {
                                        "type": "object",
                                        "properties": {
                                          "max_length": {
                                            "type": "string"
                                          }
                                        }
                                      }
                                    }
                                  }
                                },
                                "required": [
                                  "id",
                                  "type",
                                  "mandatory"
                                ]
                              }
                            }
                          },
                          "required": [
                            "id",
                            "title",
                            "type",
                            "answers"
                          ]
                        }
                      }
                    },
                    "required": [
                      "id",
                      "questions"
                    ]
                  }
                },
                "routing_rules": {
                  "type": "array",
                  "navigation_label_answer_ids":{
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "minItems": 1,
                      "uniqueItems": true
                  },
                  "items": {
                    "type": "object",
                    "properties": {
                      "goto": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "when": {
                            "$ref": "#/definitions/when"
                          }
                        },
                        "required": [
                          "id"
                        ]
                      },
                      "repeat": {
                        "type": "object",
                        "properties": {
                          "answer_id": {
                            "type": "string"
                          },
                          "goto": {
                            "type": "string"
                          },
                          "type": {
                            "enum": ["answer_value", "answer_count", "answer_count_minus_one"]
                          }
                        },
                        "required": [
                          "answer_id"
                        ]
                      }
                    },
                    "oneOf": [
                      {"required": ["goto"]},
                      {"required": ["repeat"]}
                    ]
                  }
                }
              },
              "required": [
                "id",
                "title",
                "sections"
              ]
            }
          }
        },
        "required": [
          "id",
          "title",
          "blocks"
        ]
      }
    }
  },
  "required": [
    "mime_type",
    "schema_version",
    "data_version",
    "questionnaire_id",
    "survey_id",
    "title",
    "groups",
    "theme"
  ]
}
