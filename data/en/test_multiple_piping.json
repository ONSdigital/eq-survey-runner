{
    "mime_type": "application/json/ons/eq",
    "schema_version": "0.0.1",
    "data_version": "0.0.3",
    "survey_id": "0",
    "title": "Multiple piping test survey",
    "theme": "default",
    "description": "A questionnaire to test multiple piping into a question and answer",
    "metadata": [{
        "name": "user_id",
        "validator": "string"
    }, {
        "name": "period_id",
        "validator": "string"
    }, {
        "name": "ru_name",
        "validator": "string"
    }],
    "sections": [{
        "id": "default-section",
        "groups": [{
            "id": "what-is-your-address-group",
            "title": "What is your address?",
            "blocks": [{
                "type": "Question",
                "id": "what-is-your-address",
                "question": {
                    "id": "what-is-your-address-question",
                    "title": "What is your address?",
                    "type": "General",
                    "answers": [{
                        "id": "building",
                        "label": "Building",
                        "mandatory": false,
                        "type": "TextField"
                    }, {
                        "id": "address-line-1",
                        "label": "Address Line 1",
                        "mandatory": true,
                        "type": "TextField",
                        "validation": {
                            "messages": {
                                "MANDATORY_TEXTFIELD": "Enter an address to continue"
                            }
                        }
                    }, {
                        "id": "address-line-2",
                        "label": "Address Line 2",
                        "mandatory": false,
                        "type": "TextField"
                    }, {
                        "id": "address-line-3",
                        "label": "Address Line 3",
                        "mandatory": false,
                        "type": "TextField"
                    }, {
                        "id": "town-city",
                        "label": "Town/City",
                        "mandatory": false,
                        "type": "TextField"
                    }, {
                        "id": "county",
                        "label": "County",
                        "mandatory": false,
                        "type": "TextField"
                    }, {
                        "id": "postcode",
                        "label": "Postcode",
                        "mandatory": false,
                        "type": "TextField"
                    }, {
                        "id": "country",
                        "label": "Country",
                        "mandatory": false,
                        "type": "TextField"
                    }]
                }
            }, {
                "type": "Question",
                "id": "textfield",
                "question": {
                    "id": "textfield-question",
                    "title": "Enter text below",
                    "type": "General",
                    "answers": [{
                        "id": "first-text",
                        "label": "Enter Name 1",
                        "mandatory": true,
                        "type": "TextField",
                        "validation": {
                            "messages": {
                                "MANDATORY_TEXTFIELD": "Please enter text?"
                            }
                        }
                    }, {
                        "id": "second-text",
                        "label": "Enter Name 2",
                        "mandatory": false,
                        "type": "TextField"
                    }]
                }
            }, {
                "type": "Question",
                "id": "piping-question",
                "question": {
                    "id": "multiple-piping-question",
                    "title": {
                        "text": "Does <em>{person}</em> live at <em>{address}</em>",
                        "placeholders": [{
                            "placeholder": "person",
                            "transforms": [{
                                "transform": "concatenate_list",
                                "arguments": {
                                    "list_to_concatenate": {
                                        "source": "answers",
                                        "identifier": ["first-text", "second-text"]
                                    },
                                    "delimiter": " "
                                }
                            }]
                        }, {
                            "placeholder": "address",
                            "value": {
                                "source": "answers",
                                "identifier": "address-line-1"
                            }
                        }]
                    },
                    "type": "General",
                    "answers": [{
                        "id": "multiple-piping-answer",
                        "type": "Radio",
                        "mandatory": true,
                        "options": [{
                            "label": {
                                "text": "{address}",
                                "placeholders": [{
                                    "placeholder": "address",
                                    "transforms": [{
                                        "transform": "concatenate_list",
                                        "arguments": {
                                            "list_to_concatenate": {
                                                "source": "answers",
                                                "identifier": ["building", "address-line-1", "address-line-2", "address-line-3", "town-city", "county", "postcode", "country"]
                                            },
                                            "delimiter": ", "
                                        }
                                    }]
                                }]
                            },
                            "value": "at your address"
                        }, {
                            "label": "at another address",
                            "value": "at another address"
                        }]
                    }]
                }
            }, {
                "type": "Summary",
                "id": "summary"
            }]
        }]
    }]
}
